{
    "compilerOptions": {
      "experimentalDecorators": true,
         
      "target": "es2020",                                
      "module": "commonjs",                           
      "lib": [
        "ESNext"
      ],                                   
      "outDir": "./dist",   
      "rootDir": "src",                 
      "strict": true,                                
      "esModuleInterop": true,                        
      "skipLibCheck": true,                          
      "forceConsistentCasingInFileNames": true  ,
      "moduleResolution": "node"      
    }
}